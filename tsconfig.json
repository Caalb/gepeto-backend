{
  "compilerOptions": {
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["*"]
    }
  }
}
